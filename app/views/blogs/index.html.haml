.container
  .row
    .col.s12.m6.offset-m3
      .card.blue-grey.darken-1
        - @blogs.each do |blog|
          .card-content.white-text
            %span.card-title
              = blog.title
            %p
              = blog.sentence
            .user-name-div
              %span
                ユーザー：
                = blog.user.name
            %p
          .card-action
            -if user_signed_in? && blog.user_id == current_user.id
              = link_to 'EDIT', edit_user_blog_path(blog.user,blog)
      -# = render "blogs/sentencecards"
