.container
  .row
    .col.s12.m6.offset-m3
      .card.blue-grey.darken-1
        = form_for [current_user,@blog],method: :patch do |f|
          .card-content.white-text
            %span.card-title
              = @blog.title
            .input-field
              = f.text_area :sentence ,class:'materialize-textarea'
          .card-action
            = f.submit "Send"
            = link_to "Delete",user_blog_path(current_user,@blog), method: :delete